<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:screenOrientation="portrait"
    tools:context="com.example.surya.fooddiary.DeleteMeal"
    android:id="@+id/delete_meals_id">

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="start_date"
        android:id="@+id/startBtn"
        android:background="#3e7bdd"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/startDateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startBtn"
        android:layout_marginTop="@dimen/_10sdp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="end_date"
        android:id="@+id/endBtn"
        android:background="#3e7bdd"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/endDateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/endBtn"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_10sdp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_marginLeft="21dp"
        android:id="@+id/delBtn"
        android:layout_marginTop="18dp"
        android:background="#3e7bdd"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_below="@+id/endDateTV"
        android:layout_centerHorizontal="true"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView"
        android:layout_below="@id/delBtn"
        android:layout_marginTop="@dimen/_10sdp"/>


</RelativeLayout>